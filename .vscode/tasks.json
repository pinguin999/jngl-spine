{
	"version": "2.0.0",
	"linux": {
		"command": "ninja",
		"options": {
			"cwd": "build"
		}
	},
	"osx": {
		"args": [
			"-lc",
			"cd \"\"${workspaceRoot}\"\" && clear && cd build && ninja"
		],
		"command": "/bin/bash"
	},
	"options": {
		"env": {
			"LANG": "C.UTF-8",
		}
	},
	"tasks": [
		{
			"label": "build",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	],
	"presentation": {
		"echo": true,
		"reveal": "always",
		"focus": false,
		"panel": "shared",
		"showReuseMessage": true,
		"clear": true
	}
}
